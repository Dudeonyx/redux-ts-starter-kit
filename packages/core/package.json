{
  "name": "@redux-ts-starter-kit/core",
  "version": "0.1.0-alpha.1",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "description": "Reduce redux boilerplate",
  "author": "Umeayo Onyekachukwu <umeayo.o.h@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dudeonyx/redux-ts-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/Dudeonyx/redux-ts-starter-kit/issues"
  },
  "homepage": "https://github.com/Dudeonyx/redux-ts-starter-kit#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && yarn prettier && yarn test && yarn tsc -b",
    "clean": "rimraf lib",
    "test": "yarn tsc --noEmit && yarn run jest",
    "prepublish": "yarn build",
    "alpha": "yarn publish --tag alpha",
    "precommit": "lint-staged",
    "prettier": "prettier --write src/*.ts",
    "example": "rimraf ./examples/test/ && tsc -p ./examples/ && node ./examples/test/examples/sample.js"
  },
  "keywords": [
    "react",
    "redux-starter-kit",
    "starter",
    "redux",
    "boilerplate",
    "typescript",
    "reducers",
    "createSlice",
    "react-redux",
    "javascript"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "@types/redux-immutable-state-invariant": "^2.1.0",
    "babel-core": "^6.0.0 || ^7.0.0-0",
    "babel-jest": "^23.0.0 || ^24.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "1.15.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@redux-ts-starter-kit/slice": "^0.1.0-alpha.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.7",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  }
}
